# OlloLifestyle API Production Environment Configuration
# Copy this file to .env on your production server and update the values

# JWT Configuration
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-minimum-32-characters-long
JWT_ISSUER=OlloLifestyleAPI
JWT_AUDIENCE=OlloLifestyleAPI
JWT_EXPIRE_MINUTES=60

# Database Configuration (SQL Server on host machine)
DB_PASSWORD=your-database-password-here
DB_SERVER=host.docker.internal,1433
DB_NAME=OlloLifestyleAPI_Master
DB_USER=sa

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080
IMAGE_TAG=latest

# Ports Configuration
API_PORT=8080
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
NGINX_INTERNAL_PORT=8081

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/ollo-api.crt
SSL_KEY_PATH=/etc/ssl/private/ollo-api.key

# Logging Configuration
LOG_LEVEL=Information
LOG_PATH=/app/Logs

# Security Configuration
CORS_ORIGINS=https://192.168.50.98,http://192.168.50.98:8081
ALLOWED_HOSTS=192.168.50.98,OLLO-PROD-SVR,localhost

# Rate Limiting Configuration
RATE_LIMIT_PERMIT_LIMIT=50
RATE_LIMIT_AUTH_PERMIT_LIMIT=5
RATE_LIMIT_API_PERMIT_LIMIT=50
RATE_LIMIT_UPLOAD_PERMIT_LIMIT=2
RATE_LIMIT_PUBLIC_PERMIT_LIMIT=100

# Monitoring and Health Check
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=60