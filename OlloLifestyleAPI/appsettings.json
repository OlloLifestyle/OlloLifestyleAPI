{
  "ConnectionStrings": {
    "DefaultConnection": "Server=LAPTOP-418M7MUO\\SQLEXPRESS;Database=OlloLifestyleIdentity;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-key-that-is-at-least-32-characters-long-for-security",
    "Issuer": "OlloLifestyleAPI",
    "Audience": "OlloLifestyleAPI-Client",
    "ExpiryInMinutes": 60
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": ["FromLogContext"],
    "Properties": {
      "Application": "OlloLifestyleAPI"
    }
  },
  "AllowedHosts": "*"
}
